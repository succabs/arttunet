---
import HeaderLink from './HeaderLink.astro';
import { SITE_TITLE } from '../consts';
---

<header>
  <nav>

    <a class="logo-text" href="/"> 
      <span class="l1">A</span>
      <span class="l2">R</span>
      <span class="l3">T</span>
      <span class="l4">T</span>
      <span class="l5">U</span>
      <span class="dot">.</span>
      <span class="domain">N</span>
      <span class="domain">E</span>
      <span class="domain">T</span>
    </a>
    

    <button class="hamburger" id="hamburger-btn" aria-label="Menu toggle">
      <img src="/hamburger.png" alt="Menu" />
    </button>

    <div class="internal-links" id="nav-links">
      <HeaderLink href="/">🏠Home</HeaderLink>
      <HeaderLink href="/experience">🧠Experience</HeaderLink>
      <HeaderLink href="/projects">🛠️Projects</HeaderLink>
	  <HeaderLink href="/skills">📚Skills</HeaderLink>
      <HeaderLink href="/about">👤About</HeaderLink>
      <HeaderLink href="/questbook">🗡️Questbook</HeaderLink>
      <HeaderLink href="/blog">📝Blog</HeaderLink>
    </div>
  </nav>
</header>

<style>
  header {
    margin: 0;
    box-shadow: 0 2px 8px rgba(var(--black), 5%);
  }

  nav {
    display: flex;
    align-items: center;
    justify-content: space-between;
    flex-wrap: wrap;
  }

  .internal-links {
    display: flex;
    gap: 1em;
  }

  .hamburger {
    background: none;
    border: none;
    padding: 0.5em;
    cursor: pointer;
    display: none;
  }

  .hamburger img {
    height: 30px;
  }

  @media (max-width: 720px) {
    .hamburger {
      display: block;
    }


    .internal-links {
      flex-direction: column;
      width: 100%;
      display: none;
	  margin-top: 1em;
    }

    .internal-links.show {
      display: flex;
    }
  }

  
  .logo-text {
  font-size: 1.5rem;
  font-weight: bold;
  font-family: var(--font-stack);
  text-decoration: none;
  display: flex;
  gap: 0.05em;
  align-items: center;
}

.logo-text span {
  display: inline-block;
}

/* Subtle retro-inspired palette */
.l1 { color: #ff3333; } /* red */
.l2 { color: #00ff99; } /* greenish */
.l3 { color: #00a6ff; } /* bright blue (matches your --link) */
.l4 { color: #ffff66; } /* yellow */
.l5 { color: #ff66cc; } /* pink */

.dot { color: var(--border); }

.domain {
  color: #00a6ff; /* consistent blue for ".net" */
}
</style>

<!-- Run the script on the client -->
<script>
  import { setupHamburgerMenu } from '../scripts/hamburger.ts';
  setupHamburgerMenu();
</script>
